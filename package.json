{
  "name": "play-with-dlna-to-tv-server",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun --cwd packages/server start",
    "dev": "bun run --cwd packages/webos-remote-ui dev",
    "build": "bun run --filter=\"*\" build",
    "preview": "bun run --cwd packages/webos-remote-ui preview",
    "check": "bun run --cwd packages/webos-remote-ui check",
    "test": "bun -w run test",
    "clean": "powershell -ExecutionPolicy Bypass -File ./scripts/clean.ps1"
  },
  "devDependencies": {
    "@types/bun": "^1.2.14",
    "@types/node-ssdp": "^4.0.4",
    "pm2-config": "^0.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "@inquirer/prompts": "^7.5.3",
    "inquirer": "^12.6.3"
  },
  "patchedDependencies": {
    "pm2-config@0.0.8": "patches/pm2-config@0.0.8.patch"
  }
}
